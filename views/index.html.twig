<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.7/css/bootstrap.min.css"integrity="sha384-BVYiiSIFeK1dGmJRAkycuHAHRg32OmUcww7on3RYdg4Va+PmSTsz/K68vbdEjh4u" crossorigin="anonymous">
    <title>Animal Shelter</title>
  </head>
  <body>
    <h1>Animal Shelter</h1>
    <form action="/add" method="post">
      <label>Choose animal type</label>
      <div class="radio">
        <label><input type="radio" name="optradio" value="1">dog</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="optradio" value="2">cat</label>
      </div>
      <div class="radio">
        <label><input type="radio" name="optradio" value="3">bunny</label>
      </div>
      <label for="name">Enter name:</label>
      <input name="name" type="text">
      <label for="gender">Enter gender:</label>
      <input name="gender" type="text">
      <label for="breed">Enter breed:</label>
      <input name="breed" type="text">
      <button class="btn bg-success">Add</button>
    </form>
    <form action="/checkall" method="post">
      <button class="btn bg-primary">Check All</button>
    </form>
    <form action="/dogs" method="post">
      <button class="btn bg-primary" name="dogs" value=1>Dogs</button>
    </form>
    <form action="/cats" method="post">
      <button class="btn bg-primary" name="cats" value=2>Cats</button>
    </form>
    <form action="/bunnys" method="post">
      <button class="btn bg-primary"  name="bunnys" value=3>Bunny</button>
    </form>


    {% if results is not empty %}
      {% for result in results %}
        <li>Name: {{ result.name }}</li>
        <li>Gender: {{ result.gender }}</li>
        <li>Breed: {{ result.breed }}</li>
        <li>Date Enroll: {{ result.date_enroll }}</li>
      {% endfor %}
    {% endif %}

  </body>
</html>
